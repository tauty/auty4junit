<project name="project" default="mkjar">
	<description>
            description
    </description>

	<property name="basename" value="auty4junit" />
	<property name="version" value="0.1.0" />
	<property name="src" location="./src" />
	<property name="others" location="./others" />
	<property name="classes" location="./classes" />
	<property name="lib" location="./lib" />

	<target name="mkjar">
		<mkdir dir="${classes}" />
		<antcall target="jar" />
		<delete dir="${classes}" />
	</target>

	<target name="jar" depends="compile">
		<jar basedir="${classes}" jarfile="${basename}-${version}.jar" />
	</target>

	<target name="compile">
		<javac destdir="${classes}">
			<src path="${src}" />
			<src path="${others}" />
			<classpath>
				<pathelement path="C:/tool/eclipse/plugins/org.junit_4.8.1.v4_8_1_v20100427-1100/junit.jar" />
				<fileset dir="${lib}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

</project>
